// Left side column. contains the logo and sidebar
aside.main-sidebar
  // sidebar: style can be found in sidebar.less
  section.sidebar
    // Sidebar user panel
    .user-panel
      .pull-left.image
        img.img-circle(src=user.profile.picture || 'images/4e14f517d239010c439617922dc13543.png', alt='User Image')
      |         
      .pull-left.info
        p= user.name || user.profile.name || user.email || user.id
        |           
    // search form
    form.sidebar-form(action='#', method='get')
      .input-group
        input.form-control(type='text', name='q', placeholder='Search...')
        |               
        span.input-group-btn
          button#search-btn.btn.btn-flat(type='submit', name='search')
            i.fa.fa-search
    // /.search form
    // sidebar menu: : style can be found in sidebar.less
    ul.sidebar-menu
      |
      li.treeview
        a(href='#')
          i(class= sidemenuitems.apps.class+ " applicationsicon")
          |  
          span Applications
          |             
          span.pull-right-container
            i.fa.fa-angle-left.pull-right
          ul.treeview-menu.appscontainer
            each element in sidemenuitems.apps.apps   
              if(element.displayname !== false) 
                li
                  if(element.url != '#')
                    a.sidea(href=rooturl+element.url  content= element.name type="app" id=element.name+"app")
                      i.fa.fa-circle-o
                      |  #{element.name}
                      |
                    |
                  else 
                    a.sidea(href='#'  content= element.name type="app")
                      i.fa.fa-circle-o
                      |  #{element.name}
                      |
                    |
              |
      |
      ul.sidebar-menu
      |
      li.treeview
        a(href='#')
          i(class= sidemenuitems.dashboards.class+ " dashboardsicon")
          |  
          span Dashboards
          |             
          span.pull-right-container
            i.fa.fa-angle-left.pull-right
          ul.treeview-menu.dashboardscontainer
            each element in sidemenuitems.dashboards.dashboards    
              li
                if(element.url != '#')
                  a.sidea(href=rooturl+element.url content= element.name type="dash")
                    i.fa.fa-circle-o
                    |  #{element.name}
                    |
                  |
                else 
                  a.sidea(href='#' content= element.name type="dash")
                    i.fa.fa-circle-o
                    |  #{element.name}
                    |
                  |
              |
      |