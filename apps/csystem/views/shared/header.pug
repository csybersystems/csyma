header.main-header
    // Logo
    a.logo(href=applogoref)
      // mini logo for sidebar mini 50x50 pixels
      span.logo-mini
        | 
      // logo for regular state and mobile devices
      span.logo-lg
        //img(src='https://localhost/assets-raw/core/assets/local/core/images/logo.svg', width='35', alt='')
        img(src=rooturl+'img/logo-im-small.svg', alt='')
        //b #{applogoname}
    // Header Navbar: style can be found in header.less
    nav.navbar.navbar-static-top
      // Sidebar toggle button
      a.sidebar-toggle(href='#', data-toggle='push-menu', role='button')
        span.sr-only Toggle navigation
      |       
      a.cslogo(href=applogoref)
        span
          img(src=rooturl+'img/logo-im-small.svg', alt='')
      //img(src='img/logo-im.svg', alt='')
      .navbar-custom-menu
        ul.nav.navbar-nav
          // Notifications: style can be found in dropdown.less
          li.dropdown.notifications-menu
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              i.fa.fa-bell-o
              |               
              span.label.label-warning 10
            |             
            ul.dropdown-menu
              li.header You have 10 notifications
              |               
              li
                // inner menu: contains the actual data
                ul.menu
                  li
                    a(href='#')
                      i.fa.fa-users.text-aqua
                      |  5 new members joined today
                  |                   
                  li
                    a(href='#')
                      i.fa.fa-warning.text-yellow
                      |  Very long description here that may not fit into the
                      |                       page and may cause design problems
                  |                   
                  li
                    a(href='#')
                      i.fa.fa-users.text-red
                      |  5 new members joined
                  |                   
                  li
                    a(href='#')
                      i.fa.fa-shopping-cart.text-green
                      |  25 sales made
                  |                   
                  li
                    a(href='#')
                      i.fa.fa-user.text-red
                      |  You changed your username
              |               
              li.footer
                a(href='#') View all
          // User Account: style can be found in dropdown.less
          li.dropdown.user.user-menu
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              img.user-image(src=user.profile.picture || rooturl+'images/4e14f517d239010c439617922dc13543.png', alt='User Image')
              |               
              span.hidden-xs=user.name || user.profile.name || user.email || user.id
            |             
            ul.dropdown-menu
              // User image
              li.user-header
                img.img-circle(src=user.profile.picture || rooturl+'images/4e14f517d239010c439617922dc13543.png', alt='User Image')
                |         
                p
                  p= user.name || user.profile.name 
                  small= user.email
              // Menu Footer
              li.user-footer
                if(elements.isguest)
                  a.btn.btn-default.btn-flat.btn-block(href="#").pregloginbtn
                    i(class="fa fa-lock")
                    span Login
                  a.btn.btn-default.btn-flat.btn-block(href="#").presignupbtn
                    i(class="fa fa-user-plus")
                    span Register
                  |
                else
                  //if(isroot !== false)
                  //  a.btn.btn-default.btn-flat.btn-block(href=rooturl+"admin/dashboard") Admin panel
                  //|                       
                  a.btn.btn-default.btn-flat.btn-block.sideap(href=rooturl+"#!/csyma/page/csyma/csyma_profile")
                    i.fa.fa-user
                    span My Profile
                  |               
                  a.btn.btn-default.btn-flat.btn-block(href=rooturl+"auth/logout") 
                    i.fa.fa-sign-out
                    span Logout
          // Control Sidebar Toggle Button
          li
            a(href='#', data-toggle='control-sidebar')
              i.fa.fa-gears
